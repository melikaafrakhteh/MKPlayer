<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/newPlayListCreateDialogTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:text="@string/create_playlists_title"
        android:textColor="@color/darkNavyBlue"
        android:textSize="20sp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/newPlayListCreateDialogET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="@string/new_playlist_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newPlayListCreateDialogCancelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="24dp"
            android:paddingBottom="4dp"
            android:text="@string/cancel_playlist_dialog"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/newPlayListCreateDialogOkTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="24dp"
            android:paddingBottom="4dp"
            android:text="@string/add_to_playlist_dialog"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>