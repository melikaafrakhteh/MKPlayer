<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="56dp"
    tools:context=".views.main.fragments.PlayListFragment">

    <TextView
        android:id="@+id/playListFragmentTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:paddingStart="2dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/playlist_title_tv"
        android:textColor="@color/darkNavyBlue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/title_separator_shadow"
        app:layout_constraintTop_toBottomOf="@id/playListFragmentTitleTv" />

    <TextView
        android:id="@+id/playListFragmentNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        tools:text="123 playlists"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:paddingBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/playListFragmentTitleTv"
        app:layout_constraintStart_toEndOf="@+id/playListFragmentTitleTv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playListFragmentRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:nestedScrollingEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playListFragmentTitleTv"
        tools:itemCount="1"
        tools:listitem="@layout/music_item_row" />


</androidx.constraintlayout.widget.ConstraintLayout>